<Window x:Class="ProjekatWPF.Service_appointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Service_appointment" Height="227.328" Width="300">
    <Grid Margin="0,0,15,-31">
        <Label Content="Service date :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,69,0,0"/>
        <DatePicker x:Name="RezervacijaDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="131,71,0,0"/>
        <Button Content="Submit" Command="{Binding Path=zatvoriRezervaciju}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="73" Margin="170,160,0,0" RenderTransformOrigin="0.5,0.5" Height="19" Click="Button_Click_2">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.686"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Cancel" Command="{Binding Path=zatvoriRezervaciju}" HorizontalAlignment="Left" Margin="53,160,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
